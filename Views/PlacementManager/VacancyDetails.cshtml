@model HRRequisition.Models.Vacancy
@{
    ViewBag.Title = "VacancyDetails";
    Layout = "~/Views/Shared/_LayoutPage2.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <section class="panel">
            <header class="panel-heading">
                <h2 class="panel-title">Vacancy Edit</h2>
            </header>
            <div class="panel-body">
                <form class="form-horizontal form-bordered" action="VacancyDetailsSubmit" method="post">
                    <div class="form-group">
                        <label class="col-md-3 control-label">MinMarks</label>
                        <div class="col-md-6">
                            <input type="number" class="form-control" name="MinMarks" value="@Model.MinMarks">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-3 control-label">Requirements</label>
                        <div class="col-md-6">
                            <input type="text" class="form-control" name="Requirements" value="@Model.Requirements">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-3 control-label">ContractDocs</label>
                        <div class="col-md-6">
                            <input type="text" class="form-control" name="ContractDocs" value="@Model.ContractDocs">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-3 control-label">MinExperience</label>
                        <div class="col-md-6">
                            <input type="number" class="form-control" name="MinExperience" value="@Model.MinExperience">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-3 control-label">Status</label>
                        <div class="col-md-6">
                            <select name="Status" required>
                                <option value="PENDING">PENDING</option>
                                <option value="ONGING">ONGING</option>
                                <option value="CLOSED">CLOSED </option>
                            </select>
                        </div>
                    </div>
                    <input type="hidden" name="CompanyID" value="@Model.CompanyID" />
                    <input type="hidden" name="VacancyID" value="@Model.VacancyID" />
                    <button type="submit" class="mb-xs mt-xs mr-xs btn btn-primary">Update</button>


                </form>
            </div>
        </section>

    </div>
</div>

