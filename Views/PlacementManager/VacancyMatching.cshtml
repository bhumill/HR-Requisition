@using System.Data;
@{
    ViewBag.Title = "VacancyMatching";
    Layout = "~/Views/Shared/_LayoutPage2.cshtml";
    DataTable dtVacancy = ViewBag.dtVacancy;

}

<div class="row">
    <div class="col-lg-12">
        <section class="panel">
            <header class="panel-heading">
                <h2 class="panel-title">Vacancy Search</h2>
            </header>

            <div class="panel-body">
                <div class="table-responsive">
                    <table class="table table-bordered table-hover mb-none">
                        <thead>
                            <tr>
                                <th>CandidateName</th>
                                <th>Email</th>
                                <th>Mobile</th>
                                <th>Experience</th>
                                <th>Action</th>

                               
                            </tr>
                        </thead>
                        <tbody>
                            @for (int i = 0; i < Model.Rows.Count; i++)
                            {
                                <tr>
                                    <td>@Model.Rows[i]["Name"]</td>
                                    <td>@Model.Rows[i]["Email"]</td>
                                    <td>@Model.Rows[i]["Mobile"]</td>
                                    <td>@Model.Rows[i]["Experience"]</td>
                                    <td>
                                        <a href="~/PlacementManager/ShareVacancyToCandidate?VID=@Request.Params["SID"]&CID=@Model.Rows[i]["CandidateID"]">Share Vacancy to Candidate</a>

                                        <a href="~/PlacementManager/ShareCandidateDetailToCompany?VID=@Request.Params["SID"]&CID=@Model.Rows[i]["CandidateID"]">Share Candidate details to Company</a>
                                    </td>
                                    
                                </tr>
                            }
                        </tbody>    
                    </table>

                </div>
            </div>
            @*<form>
                <input type="hidden" name="CompanyID" value="@Request.Params["CompanyID"]" />
            </form>*@
        </section>

    </div>
</div>
