@using System.Data
@{
    ViewBag.Title = "CandidateEdit";
    Layout = "~/Views/Shared/_Layout.cshtml";
    DataTable dtCandidate = ViewBag.dtCandidate;
}


<h2>Candidate Profile</h2>
<div class="row">
    <div class="col-lg-12">
        <section class="panel">
            <header class="panel-heading">
                <h2 class="panel-title">Candidate Profile</h2>
            </header>
            <div class="panel-body">
                <form class="form-horizontal form-bordered" action="MyProfileSubmit" method="post">
                    <div class="form-group">
                        <label class="col-md-3 control-label">Name</label>
                        <div class="col-md-6">
                            <input type="text" class="form-control" name="Name" value="@ViewBag.dtCandidate.Name" required>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-3 control-label">Email</label>
                        <div class="col-md-6">
                            <input type="email" class="form-control" name="Email" value="@ViewBag.dtCandidate.Email" required>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-3 control-label">Mobile</label>
                        <div class="col-md-6">
                            <input type="text" class="form-control" name="Mobile" pattern="[789][0-9]{9}" minlength="10" maxlength="10" value="@ViewBag.dtCandidate.Mobile" required>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-3 control-label">Username</label>
                        <div class="col-md-6">
                            <input type="text" class="form-control" name="Username" value="@ViewBag.dtCandidate.Username" required>
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-md-3 control-label">IsActive</label>
                        <div class="col-md-6">
                            <input type="checkbox" class="form-control" name="IsActive" value="1" @(ViewBag.dtCandidate.IsActive ? "checked=checked" : "") required>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-3 control-label">Address</label>
                        <div class="col-md-6">
                            <input type="text" class="form-control" name="Address" value="@ViewBag.dtCandidate.Address" required>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-3 control-label">City</label>
                        <div class="col-md-6">
                            <input type="text" class="form-control" name="City" value="@ViewBag.dtCandidate.City" required>
                        </div>
                    </div>
                    <input type="hidden" name="CandidateID" value="@ViewBag.dtCandidate.CandidateID" required>
                    <button type="submit" class="mb-xs mt-xs mr-xs btn btn-primary">Update</button>


                </form>
            </div>
        </section>

    </div>
</div>

