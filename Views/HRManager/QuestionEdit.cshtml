@{
    Layout = "~/Views/Shared/_LayoutPage2.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <section class="panel">
            <header class="panel-heading">
                <h2 class="panel-title">New Question</h2>
            </header>
            <div class="panel-body">
                <form class="form-horizontal form-bordered" action="QuestionEditSubmit" method="post">
                    <div class="form-group">
                        <label class="col-md-3 control-label">Title</label>
                        <div class="col-md-6">
                            <input type="text" class="form-control" name="Title" value="@Model.Title" required>
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-md-3 control-label">Option1</label>
                        <div class="col-md-6">
                            <input type="text" class="form-control" name="Option1" value="@Model.Option1" required>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-3 control-label">Option2</label>
                        <div class="col-md-6">
                            <input type="text" class="form-control" name="Option2" value="@Model.Option2" required>
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-md-3 control-label">Option3</label>
                        <div class="col-md-6">
                            <input type="text" class="form-control" name="Option3" value="@Model.Option3" required>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-3 control-label">Option4</label>
                        <div class="col-md-6">
                            <input type="text" class="form-control" name="Option4" value="@Model.Option4" required>
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-md-3 control-label">CorrectAnswer</label>
                        <div class="col-md-6">
                            <select name="CorrectAnswer" required>
                                <option value="1">1</option>
                                <option value="2">2</option>
                                <option value="3">3 </option>
                                <option value="4">4 </option>
                            </select>
                            </div>
                    </div>



                    <div class="form-group">
                        <label class="col-md-3 control-label"></label>
                        <div class="col-md-6">
                            <input name="QuestionID" type="hidden" value=@Model.QuestionID>
                            <button type="submit" class="mb-xs mt-xs mr-xs btn btn-primary">Update</button>

                        </div>
                    </div>

                </form>
            </div>
        </section>

    </div>
</div>