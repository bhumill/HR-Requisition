@using System.Data
@{
    Layout = "~/Views/Shared/_LayoutPage2.cshtml";
    DataTable dtSkill = ViewBag.dtSkill;
}

<div class="row">
    <div class="col-lg-12">
        <section class="panel">
            <header class="panel-heading">
                <h2 class="panel-title">All Question</h2>
            </header>
            <div class="panel-body">
                <div class="table-responsive">
                    <table class="table table-bordered table-hover mb-none">
                        <thead>
                            <tr>
                                @*<th>QuestionID</th>*@
                                <th>SkillName</th>
                                <th>Title</th>
                                <th>Option1</th>
                                <th>Option2</th>
                                <th>Option3</th>
                                <th>Option4</th>
                                <th>CorrectAnswer</th>
                                <th>Action</th>

                            </tr>
                        </thead>
                        <tbody>
                            @for (int i = 0; i < Model.Rows.Count; i++)
                            {
                                <tr>
                                    
                                    <td>@Model.Rows[i]["SkillName"]</td>
                                    <td>@Model.Rows[i]["Title"]</td>
                                    <td>@Model.Rows[i]["Option1"]</td>
                                    <td>@Model.Rows[i]["Option2"]</td>
                                    <td>@Model.Rows[i]["Option3"]</td>
                                    <td>@Model.Rows[i]["Option4"]</td>
                                    <td>@Model.Rows[i]["CorrectAnswer"]</td>

                                   


                                    <td>
                                        <a href="/HRManager/QuestionEdit?SID=@Model.Rows[i]["QuestionID"]">Edit</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>

                </div>
            </div>
        </section>

    </div>
</div>
