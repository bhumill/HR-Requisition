@model HRRequisition.Models.Company
@{
    ViewBag.Title = "CompanyDetails";
    Layout = "~/Views/Shared/_LayoutPage2.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <section class="panel">
            <header class="panel-heading">
                <h2 class="panel-title">Vacancy Edit</h2>
            </header>
            <div class="panel-body">
                <form class="form-horizontal form-bordered" action="CompanyDetailsSubmit" method="post">
                    <div class="form-group">
                        <label class="col-md-3 control-label">MinMarks</label>
                        <div class="col-md-6">
                            <input type="text" class="form-control" name="Name" value="@Model.Name">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-3 control-label">Email</label>
                        <div class="col-md-6">
                            <input type="email" class="form-control" name="Email" value="@Model.Email">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-3 control-label">Mobile</label>
                        <div class="col-md-6">
                            <input type="text" class="form-control" name="Mobile" pattern="[789][0-9]{9}" minlength="10" maxlength="10" value="@Model.Mobile">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-3 control-label">Username</label>
                        <div class="col-md-6">
                            <input type="text" class="form-control" name="Username" value="@Model.Username">
                        </div>
                    </div>

                    @*<div class="form-group">
                        <label class="col-md-3 control-label">Password</label>
                        <div class="col-md-6">
                            <input type="hidden" class="form-control" name="Username" value="@Model.Password">
                        </div>
                    </div>*@


                   
                    <div class="form-group">
                        <label class="col-md-3 control-label">IsActive</label>
                        <div class="col-md-6">
                            <input type="checkbox" class="form-control" name="IsActive" value="1" @(Model.IsActive ? "checked=checked" : "")>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-3 control-label">Address</label>
                        <div class="col-md-6">
                            <input type="text" class="form-control" name="Address" value="@Model.Address">
                        </div>
                    </div>
                    
                    <div class="form-group">
                        <label class="col-md-3 control-label">Status</label>
                        <div class="col-md-6">
                            <select name="Status" required>
                                <option value="PENDING">PENDING</option>
                                <option value="APPROVED">APPROVED</option>
                                
                            </select>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-3 control-label">CompanyDocs</label>
                        <div class="col-md-6">
                            <input type="file" class="form-control" name="CompanyDocs" value="@Model.CompanyDocs">
                        </div>
                    </div>
                            <input type="hidden" name="CompanyID" value="@Model.CompanyID" />
                            
                            <button type="submit" class="mb-xs mt-xs mr-xs btn btn-primary">Update</button>


                </form>
            </div>
        </section>

    </div>
</div>
