@model HRRequisition.Models.Skill

@{
    Layout = "~/Views/Shared/_LayoutPage2.cshtml";
}

<div class="row">
    <div class="col-lg-12">

        <section class="panel">
            <header class="panel-heading">
                <h2 class="panel-title">Skill Edit</h2>
            </header>
            <div class="panel-body">
                <form class="form-horizontal form-bordered" action="/Admin/SkillEditSubmit" method="post">
                    <div class="form-group">
                        <label class="col-md-3 control-label">Skill Name</label>
                        <div class="col-md-6">
                            <input type="text" class="form-control" name="SkillName" value="@Model.SkillName">
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-md-3 control-label"></label>
                        <div class="col-md-6">
                            <input name="SkillID" type="hidden" value=@Model.SkillID>
                            <button type="submit" class="mb-xs mt-xs mr-xs btn btn-primary">UPDATE</button>

                        </div>
                    </div>

                </form>
            </div>
        </section>

    </div>
</div>