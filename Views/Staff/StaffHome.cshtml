@using System.Data
@{
    Layout = "~/Views/Shared/_LayoutPage2.cshtml";
    DataTable dtStaff = ViewBag.dtStaff;
}

<div class="row">
    <div class="col-lg-12">
        <section class="panel">
            <header class="panel-heading">
                <h2 class="panel-title">All Staff</h2>
            </header>
            <div class="panel-body">
                <div class="table-responsive">
                    <table class="table table-bordered table-hover mb-none">
                        <thead>
                            <tr>
                                <th>Staff ID</th>
                                <th>Name</th>
                                <th>Email</th>
                                <th>Mobile</th>
                                <th>Username</th>
                                <th>StaffType</th>
                                @*<th>Action</th>*@


                            </tr>
                        </thead>
                        <tbody>
                            @for (int i = 0; i < Model.Rows.Count; i++)
                            {
                                <tr>
                                    <td>@dtStaff.Rows[i]["StaffID"]</td>
                                    <td>@dtStaff.Rows[i]["Name"]</td>
                                    <td>@dtStaff.Rows[i]["Email"]</td>
                                    <td>@dtStaff.Rows[i]["Mobile"]</td>
                                    <td>@dtStaff.Rows[i]["Username"]</td>
                                    <td>@dtStaff.Rows[i]["StaffType"]</td>

                                    @*<td>
                                        <a href="/Admin/StaffEdit?SID=@Model.Rows[i]["StaffID"]">Edit</a>
                                    </td>*@
                                </tr>
                            }
                        </tbody>
                    </table>

                </div>
            </div>
        </section>

    </div>
</div>

