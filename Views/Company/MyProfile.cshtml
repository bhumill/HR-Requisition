@using System.Data
@{ 
    ViewBag.Title = "MyProfiles";
    Layout = "~/Views/Shared/_LayoutPage2.cshtml";
    DataTable dtDomain = ViewBag.dtDomain;
}
<h2>My Profile</h2>
<div class="row">
    <div class="col-lg-12">
        <section class="panel">
            <header class="panel-heading">
                <h2 class="panel-title">Profile</h2>
            </header>
            <div class="panel-body">
                <form class="form-horizontal form-bordered" action="MyProfileSubmit" method="post" enctype="multipart/form-data">
                    <div class="form-group">
                        <label class="col-md-3 control-label">Name</label>
                        <div class="col-md-6">
                            <input type="text" class="form-control" name="Name" value="@ViewBag.CurrentCompany.Name" required>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-3 control-label">Email</label>
                        <div class="col-md-6">
                            <input type="email" class="form-control" name="Email" value="@ViewBag.CurrentCompany.Email" required>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-3 control-label">Mobile</label>
                        <div class="col-md-6">
                            <input type="text" class="form-control" name="Mobile" pattern="[789][0-9]{9}" minlength="10" maxlength="10" value="@ViewBag.CurrentCompany.Mobile" required>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-3 control-label">Username</label>
                        <div class="col-md-6">
                            <input type="text" class="form-control" name="Username" value="@ViewBag.CurrentCompany.Username" required>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-3 control-label">Password</label>
                        <div class="col-md-6">
                            <input type="password" class="form-control" name="Password" value="@ViewBag.CurrentCompany.Password" required>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-3 control-label">IsActive</label>
                        <div class="col-md-6">
                            <input type="checkbox" class="form-control" name="IsActive" value="1" @(ViewBag.CurrentCompany.IsActive ? "checked=checked" : "") required>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-3 control-label">Address</label>
                        <div class="col-md-6">
                            <input type="text" class="form-control" name="Address" value="@ViewBag.CurrentCompany.Address" required>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-3 control-label">Select Domain</label>
                        <div class="col-md-6">
                            <select name="DomainID">
                                @for (int i = 0; i < dtDomain.Rows.Count; i++)
                                {
                                    <option value='@dtDomain.Rows[i]["DomainID"]'>@dtDomain.Rows[i]["DomainName"]</option>
                                }
                            </select>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-3 control-label">Status</label>
                        <div class="col-md-6">
                            <input type="text" class="form-control" name="Status" value="@ViewBag.CurrentCompany.Status" required>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-3 control-label">CompanyDocs</label>
                        <div class="col-md-6">
                            <input type="file" class="form-control" name="CompanyDocs" value="@ViewBag.CurrentCompany.CompanyDocs" required>
                        </div>
                    </div>
                  
                    <button type="submit" class="mb-xs mt-xs mr-xs btn btn-primary">Update</button>


                </form>
            </div>
        </section>

    </div>
</div>
