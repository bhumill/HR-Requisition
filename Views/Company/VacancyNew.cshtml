
@{
    ViewBag.Title = "VacancyNew";
    Layout = "~/Views/Shared/_LayoutPage2.cshtml";
}


<div class="col-lg-12">
    <section class="panel">
        <header class="panel-heading">
            <h2 class="panel-title">New Vacancy</h2>
        </header>
        <div class="panel-body">
            <form class="form-horizontal form-bordered" action="VacancyNewSubmit" method="post">
                <div class="form-group">
                    <label class="col-md-3 control-label">MinMarks</label>
                    <div class="col-md-6">
                        <input type="number" class="form-control" name="MinMarks" required>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-3 control-label">Requirements</label>
                    <div class="col-md-6">
                        <input type="text" class="form-control" name="Requirements" required>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-3 control-label">ContractDocs</label>
                    <div class="col-md-6">
                        <input type="text" class="form-control" name="ContractDocs" required>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-3 control-label">MinExperience</label>
                    <div class="col-md-6">
                        <input type="number" class="form-control" name="MinExperience" required>
                    </div>
                </div>

                <button type="submit" class="mb-xs mt-xs mr-xs btn btn-primary">SAVE</button>



            </form>
        </div>
    </section>

</div>



