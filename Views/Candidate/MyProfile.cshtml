@using System.Data
@{
    ViewBag.Title = "MyProfile";
    Layout = "~/Views/Shared/_LayoutPage2.cshtml";
    DataTable dtDomain = ViewBag.dtDomain;
}



<h2>My Profile</h2>
<div class="row">
    <div class="col-lg-12">
        <section class="panel">
            <header class="panel-heading">
                <h2 class="panel-title">Profile</h2>
            </header>
            <div class="panel-body">
                <form class="form-horizontal form-bordered" action="MyProfileSubmit" method="post" enctype="multipart/form-data">
                    <div class="form-group">
                        <label class="col-md-3 control-label">Name</label>
                        <div class="col-md-6">
                            <input type="text" class="form-control" name="Name" value="@ViewBag.CurrentCandidate.Name">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-3 control-label">Email</label>
                        <div class="col-md-6">
                            <input type="email" class="form-control" name="Email" value="@ViewBag.CurrentCandidate.Email" required>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-3 control-label">Mobile</label>
                        <div class="col-md-6">
                            <input type="text" class="form-control" name="Mobile" pattern="[789][0-9]{9}" minlength="10" maxlength="10" value="@ViewBag.CurrentCandidate.Mobile" required>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-3 control-label">Username</label>
                        <div class="col-md-6">
                            <input type="text" class="form-control" name="Username" value="@ViewBag.CurrentCandidate.Username" required>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-3 control-label">Password</label>
                        <div class="col-md-6">
                            <input type="password" class="form-control" name="Password" value="@ViewBag.CurrentCandidate.Password" required>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-3 control-label">IsActive</label>
                        <div class="col-md-6">
                            <input type="checkbox" class="form-control" name="IsActive" value="1" @(ViewBag.CurrentCandidate.IsActive ? "checked=checked" : "") required>    
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-3 control-label">Address</label>
                        <div class="col-md-6">
                            <input type="text" class="form-control" name="Address" value="@ViewBag.CurrentCandidate.Address" required>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-3 control-label">City</label>
                        <div class="col-md-6">
                            <input type="text" class="form-control" name="City" value="@ViewBag.CurrentCandidate.City" required>
                        </div>
                    </div>
                   
                    <div class="form-group">
                        <label class="col-md-3 control-label">Select Domain</label>
                        <div class="col-md-6">
                            <select name="DomainID">
                                @for (int i = 0; i < dtDomain.Rows.Count; i++)
                                {
                                    <option value='@dtDomain.Rows[i]["DomainID"]'>@dtDomain.Rows[i]["DomainName"]</option>
                                }
                            </select>
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-md-3 control-label">ResumeFile</label>
                        <div class="col-md-6">
                            <input type="file" class="form-control" name="ResumeFile" value="@ViewBag.CurrentCandidate.ResumeFile" required>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-3 control-label">Remarks</label>
                        <div class="col-md-6">
                            <input type="text" class="form-control" name="Remarks" value="@ViewBag.CurrentCandidate.Remarks" required>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-3 control-label">ProfilePicture</label>
                        <div class="col-md-6">
                            <img src="~/ProfilePicture/@ViewBag.CurrentCandidate.ProfilePicture" style="max-height:200px; max-width:200px;" />
                            <br />
                            <input type="file" class="form-control" name="ProfilePicture" value="@ViewBag.CurrentCandidate.ProfilePicture" required>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-3 control-label">Experience</label>
                        <div class="col-md-6">
                            <input type="number" class="form-control" name="Experience" value="@ViewBag.CurrentCandidate.Experience" required>
                        </div>
                    </div>



                    <button type="submit" class="mb-xs mt-xs mr-xs btn btn-primary">Update</button>


                </form>
            </div>
        </section>

    </div>
</div>

