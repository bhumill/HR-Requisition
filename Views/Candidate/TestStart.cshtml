@using System.Data
@{
    ViewBag.Title = "TestStart";
    Layout = "~/Views/Shared/_LayoutPage2.cshtml";
    DataTable dtSkill = ViewBag.dtSkill;
}

<div class="row">
    <div class="col-lg-12">
        <section class="panel">
            <header class="panel-heading">
                <h2 class="panel-title">My Skills</h2>
            </header>
            <form action="TestGenerate" method="get">
                <div class="panel-body">
                    <div class="table-responsive">
                        <table class="table table-bordered table-hover mb-none">
                            <thead>
                                <tr>

                                    <th>My Skills</th>
                                    <th>My Remarks</th>



                                </tr>
                            </thead>
                            <tbody>

                                @for (int i = 0; i < Model.Rows.Count; i++)
                                {
                                    <tr>

                                        <td>@Model.Rows[i]["SkillName"]</td>
                                        <td>@Model.Rows[i]["Remarks"]</td>


                                    </tr>
                                }
                            </tbody>
                        </table>

                    </div>
                </div>

                <button type="submit" class="mb-xs mt-xs mr-xs btn btn-primary btn-lg btn-block" align="center">Start Your Test</button>

            </form>
        </section>

    </div>
</div>

