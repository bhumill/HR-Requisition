@using System.Data
@{
    ViewBag.Title = "CandidateSkills";
    Layout = "~/Views/Shared/_LayoutPage2.cshtml";
    DataTable dtSkill = ViewBag.dtSkill;
}


<h2>Candidate Skills</h2>
<div class="row">
    <div class="col-lg-12">
        <section class="panel">
            <header class="panel-heading">
                <h2 class="panel-title">All Skills</h2>
            </header>
            <form action="CandidateSkillsSubmit" method="post">
                <div class="panel-body">
                    <div class="table-responsive">
                        <table class="table table-bordered table-hover mb-none">
                            <thead>
                                <tr>

                                    <th>My Skills</th>
                                    <th>My Remarks</th>
                                    <th>Action</th>


                                </tr>
                            </thead>
                            <tbody>

                                @for (int i = 0; i < Model.Rows.Count; i++)
                                {
                                    <tr>

                                        <td>@Model.Rows[i]["SkillName"]</td>
                                        <td>@Model.Rows[i]["Remarks"]</td>

                                        <td>
                                            <a href="/Candidate/CandidateSkillsDelete?CandidateSkillID=@Model.Rows[i]["CandidateSkillID"]">Delete</a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>

                    </div>
                </div>


                <div class="panel-body">
                    <div class="table-responsive">
                        <table class="table table-bordered table-hover mb-none">
                            <thead>
                                <tr>

                                    <th>Skill</th>
                                    <th>Remarks</th>

                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>
                                        <select name="SkillID" >
                                            @for (int i = 0; i < dtSkill.Rows.Count; i++)
                                            {
                                                <option value='@dtSkill.Rows[i]["SkillID"]'>@dtSkill.Rows[i]["SkillName"]</option>
                                            }
                                        </select>
                                    </td>
                                    <td><input type="text" class="form-control" name="Remarks"></td>
                                    @*<td><input type="hidden" class="form-control" name="CandidateSkillID"> </td>*@
                                    <td><button type="submit" class="mb-xs mt-xs mr-xs btn btn-primary">Add</button></td>


                                </tr>
                            </tbody>
                        </table>

                    </div>
                </div>



            </form>
        </section>

    </div>
</div>
